@import reset

bg-image(image)
  background: url('/img/' + image)

transition(transition)
    -webkit-transition transition
    -moz-transition transition
    transition transition

body_font_color = #111
body_bg_color = #fefefe
a_color = #444
a_color_hover = #999


body_font_color_night = #fefefe
body_bg_color_night = #111
a_color_night = #aaa
a_color_hover_night = #fefefe

html, body
  height 100%

body
  background-color body_bg_color
  color body_font_color
  width 90%
  overflow hidden
  margin 0 auto
  text-align center
  transition(color 0.5s);
  
  &.night
    background-color body_bg_color_night
    color body_font_color_night
    
    a
      color a_color_night
      
      &:hover
        color a_color_hover_night

body.nojs
  overflow scroll

  #content
    height auto

    #imageGallery
      width 100%
      max-height inherit
      height auto
      display inline-block

      img
        margin 0
        width 100%
        float none
        max-width 100%
        max-height inherit
        margin 1em 0 0

header.main
  width 100%
  left 0
  padding 5em 0 3em

  nav#menu
    width 100%

    ul
      li
        display inline
        margin 0 0.5em

a
  color a_color
  text-decoration none
  &:hover
    color a_color_hover

#content
  display inline-block
  overflow hidden
  height 90%
  width 100%

noscript#imageGallery, div#gallery
  width 100%
  max-height 90%
  display inline-block
  overflow hidden

  img
    width 100%
    max-width 1200px


#gallery-container
  li
    opacity 0
    transition(opacity 0.5s)
    &.displayed
      opacity 1
  
    h2
      margin 1.5em 0 0

#imageMenu
  width 100%
  height 10%

  img
    float left
    height 100%

@media (max-width: 400px)
  body
    width 95%
